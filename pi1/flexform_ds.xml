<T3DataStructure>
	<sheets>
		<general>
			<ROOT>
				<TCEforms>
					<sheetTitle>General</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<sorting>
						<TCEforms>
							<label>Sorting</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Random</numIndex>
										<numIndex index="1">random</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Use Backend Sorting</numIndex>
										<numIndex index="1">backend</numIndex>
									</numIndex>
								<!--
									<numIndex index="2" type="array">
										<numIndex index="0">Group By Category</numIndex>
										<numIndex index="1">category</numIndex>
									</numIndex>
								-->
								</items>
							</config>
						</TCEforms>
					</sorting>
					
					<paging>
						<TCEforms>
							<label>LLL:EXT:wec_assessment/locallang_db.php:tt_content.pi_flexform.paging</label>
							<config>
								<type>check</type>
							</config>
							<onChange>reload</onChange>
						</TCEforms>
					</paging>
					
					
					<perPage>
						<TCEforms>
							<label>LLL:EXT:wec_assessment/locallang_db.php:tt_content.pi_flexform.perPage</label>
							<displayCond>FIELD:paging:REQ:true</displayCond>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>required</eval>
							</config>
						</TCEforms>
					</perPage>
					
					<minRange>
						<TCEforms>
							<label>LLL:EXT:wec_assessment/locallang_db.php:tt_content.pi_flexform.minRange</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>required</eval>
							</config>
							<onChange>reload</onChange>
						</TCEforms>
					</minRange>
					
					<maxRange>
						<TCEforms>
							<label>LLL:EXT:wec_assessment/locallang_db.php:tt_content.pi_flexform.maxRange</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>required</eval>
							</config>
							<onChange>reload</onChange>
						</TCEforms>
					</maxRange>
					
					
					<!--
					<pages>
						<TCEforms>
							<exclude>1</exclude>
							<label>LLL:EXT:lang/locallang_general.php:LGL.startingpoint</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>3</size>
								<maxitems>22</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>
						</TCEforms>
					</pages>
					-->
					
				</el>
			</ROOT>
		</general>
		
		<labels>
			<ROOT>
				<TCEforms>
					<sheetTitle>Labels</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					
					<scale>
						<TCEforms>
							<label>Scale</label>
							<config>
								<type>user</type>
								<userFunc>tx_wecassessment_flexform->getScaleForm</userFunc>
								<noTableWrapping>true</noTableWrapping>
							</config>
						</TCEforms>
					</scale>
					
				</el>
			</ROOT>
		</labels>
		
		<validation>
			<ROOT>
				<TCEforms>
					<sheetTitle>Validation</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					
					<errors>
						<TCEforms>
							<label>LLL:EXT:wec_assessment/locallang_db.php:tt_content.pi_flexform.errors</label>
							<config>
								<type>user</type>
								<userFunc>tx_wecassessment_flexform->getValidationErrors</userFunc>
							</config>
						</TCEforms>
					</errors>
					
				</el>
			</ROOT>
		</validation>
		
	</sheets>
</T3DataStructure>
